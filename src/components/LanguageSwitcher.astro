---
// 语言切换组件
import { languages, type Language, getLangFromUrl, getLanguageSwitchUrl } from '../i18n/index';

const currentUrl = Astro.url;
const currentLang = getLangFromUrl(currentUrl);
---

<div class="language-switcher relative">
  <button 
    type="button"
    class="flex items-center gap-2 px-3 py-2 text-sm text-gray-600 hover:text-gray-900 rounded-lg hover:bg-gray-100 transition-colors"
    aria-haspopup="listbox"
    aria-expanded="false"
    id="language-button"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <span id="current-lang">{languages[currentLang]}</span>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>
  
  <ul 
    class="language-menu absolute right-0 mt-2 w-40 bg-white rounded-lg shadow-lg border border-gray-200 py-1 hidden z-50"
    role="listbox"
    id="language-menu"
  >
    {Object.entries(languages).map(([code, name]) => (
      <li role="option" aria-selected={code === currentLang}>
        <a
          href={getLanguageSwitchUrl(currentUrl, code as Language)}
          class={`block px-4 py-2 text-sm hover:bg-gray-100 transition-colors ${
            code === currentLang ? 'text-blue-600 font-medium bg-blue-50' : 'text-gray-700'
          }`}
        >
          {name}
        </a>
      </li>
    ))}
  </ul>
</div>

<script>
  const button = document.getElementById('language-button');
  const menu = document.getElementById('language-menu');
  
  if (button && menu) {
    button.addEventListener('click', () => {
      const isExpanded = button.getAttribute('aria-expanded') === 'true';
      button.setAttribute('aria-expanded', String(!isExpanded));
      menu.classList.toggle('hidden');
    });
    
    // Close on click outside
    document.addEventListener('click', (e) => {
      if (!button.contains(e.target as Node) && !menu.contains(e.target as Node)) {
        button.setAttribute('aria-expanded', 'false');
        menu.classList.add('hidden');
      }
    });
    
    // Close on Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        button.setAttribute('aria-expanded', 'false');
        menu.classList.add('hidden');
      }
    });
  }
</script>
