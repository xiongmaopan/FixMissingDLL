<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="container">
    <nav class="breadcrumb">
      <a href="/">Home</a> &gt; <span>FAQ</span>
    </nav>
    
    <header class="page-header">
      <h1>DLL Frequently Asked Questions</h1>
      <p class="subtitle">Expert answers to the most common DLL questions</p>
    </header>

    <div class="faq-container">
      {faqs.map((faq, index) => (
        <article class="faq-item" id={faq.id}>
          <h2 class="faq-question">
            <span class="faq-number">{index + 1}</span>
            {faq.question}
          </h2>
          <div class="faq-answer">
            <Fragment set:html={faq.answer.replace(/\n/g, '<br>').replace(/```(\w+)?\n([\s\S]*?)```/g, '<pre><code>$2</code></pre>')} />
            
            {faq.relatedGuides.length > 0 && (
              <div class="related-guides">
                <strong>üìö Related Guides:</strong>
                <ul>
                  {faq.relatedGuides.map(slug => (
                    <li><a href={`/guides/${slug}`}>{slug.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}</a></li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </article>
      ))}
    </div>

    <section class="cta-section">
      <h2>Still Have Questions?</h2>
      <p>Search our database of 8,000+ DLL files or browse our detailed guides.</p>
      <div class="cta-buttons">
        <a href="/search" class="btn btn-primary">Search DLL Database</a>
        <a href="/guides" class="btn btn-secondary">Browse Guides</a>
      </div>
    </section>
  </main>
</BaseLayout>

<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer.replace(/\n/g, ' ').replace(/```[\s\S]*?```/g, '').trim()
    }
  }))
})} />

